---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>
 
<ol>
  {% assign tagName = {{tag}} %}
  {% assign taglist = collections[tagName] %}
	{%- for post in taglist -%}
		<li>post: {{ post.data.title }}</li>
	{%- endfor -%}
</ol>



